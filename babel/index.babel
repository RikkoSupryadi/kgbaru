const phrases = [
  `Uh-oh! This is not good.`,
  `Someone stepped on a cable.`,
  `The server may have exploded.`,
  `Thank you server, very cool!`
]

const get = n => phrases[typeof n === 'number' ? n : Math.round(Math.random() * (phrases.length - 1))]
const upd = n => document.querySelector('h2').textContent = get(n)

upd()

let curr = 0
document.addEventListener('click', () => upd(++curr >= phrases.length ? (curr = 0) : curr), false)
